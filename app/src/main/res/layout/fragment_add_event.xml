<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".addEventFragment"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventNameInput"
            android:textColorHint="@android:color/holo_red_light"
            android:hint="Enter Event Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departureInput"
            android:textColorHint="@android:color/holo_red_light"
            android:hint="Enter Departure Place"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/destinationInput"
            android:textColorHint="@android:color/holo_red_light"
            android:hint="Enter Destination"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/initialBudgetInput"
            android:inputType="number"
            android:textColorHint="@android:color/holo_red_light"
            android:hint="Enter Initial Budget"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateBtn"
            android:background="@android:color/holo_red_light"
            android:text="Select Departure Date"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createNewEvent"
            android:layout_marginTop="15dp"
            android:background="@android:color/holo_red_light"
            android:text="Create New Event"/>


    </LinearLayout>
</layout>
